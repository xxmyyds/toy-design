{
  "name": "toy-design",
  "packageManager": "pnpm@7.12.1",
  "private": "true",
  "engines": {
    "node": ">= 16"
  },
  "keywords": [
    "design",
    "ui",
    "vue",
    "framework"
  ],
  "author": "xxmyyds",
  "main": "index.js",
  "scripts": {
    "publish:npm": "sh ./scripts/publish.sh",
    "publish-icon:npm": "sh ./scripts/publish-icon.sh",
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm build:css && vite build",
    "build:css": "vite build --config vite.config.css.ts",
    "build:icon": "rimraf dist-icon && vite build --config vite.config.icon.ts",
    "release": "bumpp ./packages/toy-design/package.json",
    "commit": "git cz",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "vitest",
    "play": "pnpm -C play dev",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  },
  "dependencies": {
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@xxm7/eslint-config-vue": "^2.0.10",
    "bumpp": "^8.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "typescript": "^4.8.4",
    "unplugin-vue-setup-extend-plus": "^0.3.2",
    "vite": "^3.1.8",
    "vite-plugin-dts": "^1.6.6",
    "vite-svg-loader": "^3.6.0",
    "vitest": "^0.24.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
